<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kakao.kakaopay.repository.UserMapper">

    <select id="getUser" resultType="com.kakao.kakaopay.model.User">
      SELECT *
      FROM USER
      WHERE ID = #{userId}
    </select>

    <insert id="insertUser">
      INSERT INTO USER (ID, PASSWORD, TOKEN)
      VALUES (#{userId}, #{userPasswd}, #{userToken})
    </insert>

    <insert id="updateToken">
      UPDATE USER SET TOKEN = #{userToken}
      WHERE ID = #{userId}
    </insert>

</mapper>